{
  "name": "fortnite-core",
  "version": "1.0.0",
  "description": "Monorepo for Fortnite data processing tools",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc -b",
    "build:packages": "npm run build --workspaces",
    "dev": "npm run dev --workspaces",
    "clean": "npm run clean --workspaces",
    "ingest": "cd packages/ai-assistant && npm run build && npm run ingest"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/node-cron": "^3.0.11",
    "@types/fs-extra": "^11.0.4",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.6.5",
    "express": "^4.18.2",
    "node-cron": "^3.0.3",
    "fs-extra": "^11.2.0",
    "decompress": "^4.2.1",
    "binary-parser": "^2.2.1",
    "dotenv": "^16.3.1"
  }
}

